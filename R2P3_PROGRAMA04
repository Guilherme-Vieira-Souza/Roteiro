package R2P3;
import java.util.Scanner;

public class TESTE {
    public static void main(String[] args) {
        Scanner entrada = new Scanner(System.in);
        int flag = -1;
        int somaNota = 0;
        int contador = 0;
        double media = 0.0; 

       
        for (int i = 0; i < 8; i++) {
            System.out.println("Informe uma nota ou digite -1 para encerrar o programa:");
            int nota = entrada.nextInt();

            if (nota == flag) {
                System.out.println("Input encerrado!!");
                break;
            }

            if (nota >= 0) {
                somaNota += nota;
                contador++;
            }
        }


        if (contador > 0) {
            media = (double) somaNota / contador;
            System.out.println("A média das notas é: " + media);
        } else {
            System.out.println("Nenhuma nota foi inserida");
        }

       
        if (contador > 0) {  
            if (media >= 6) {
                System.out.println("Aprovado!!");
            } else {
                System.out.println("Reprovado!!");
            }
        }

        entrada.close();  
    }
}
